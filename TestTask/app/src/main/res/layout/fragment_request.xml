<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.evgeny.testtask.request.RequestFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edit_request"
            android:text="@string/default_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:layout_toEndOf="@+id/request_label"
            android:layout_toRightOf="@+id/request_label"
            />

        <TextView
            android:id="@+id/request_label"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/size_text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/edit_request"
            android:layout_marginRight="@dimen/margin"
            android:text="@string/request" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_request"
            android:layout_centerHorizontal="true"
            android:text="@string/submit" />

    </RelativeLayout>

</FrameLayout>
